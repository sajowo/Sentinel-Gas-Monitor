<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MonitorGazuApp.MainWindow"
        Title="AirGuard Pro - System Monitoringu (M1)" Width="1000" Height="650"
        Background="#E5E5E5" CanResize="False" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid ColumnDefinitions="360, *">
            
            <Border Grid.Column="0" Background="White" Margin="15" CornerRadius="15" BoxShadow="0 4 15 0 #CCC">
                <StackPanel Margin="18" Spacing="10">
                    <TextBlock Text="PANEL OPERATORA" FontWeight="Bold" FontSize="22" 
                               HorizontalAlignment="Center" Foreground="#333"/>

                    <Border Background="#F9F9F9" CornerRadius="12" Padding="12" BoxShadow="0 2 8 0 #E0E0E0">
                        <StackPanel>
                            <TextBlock Name="LblTytulStezenia" Text="Aktualne StÄ™Å¼enie (S1):" Foreground="#666" 
                                       HorizontalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                            <TextBlock Name="LblWynik" Text="---" FontSize="48" FontWeight="Bold" 
                                       Foreground="#FFA500" HorizontalAlignment="Center" Margin="0,2"/>
                            <TextBlock Name="LblStatus" Text="Oczekiwanie..." FontSize="15" 
                                       Foreground="#555" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <ProgressBar Name="PasekGazu" Minimum="0" Maximum="250" Height="20" 
                                 Foreground="#007ACC" Background="#E8E8E8" CornerRadius="10" 
                                 BorderBrush="#CCC" BorderThickness="1"/>

                    <Border Background="#F5F5F5" Padding="10" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="ðŸ“ Wybrany Sensor (X, Y):" FontWeight="Bold" FontSize="11" Margin="0,0,0,6" Foreground="#333"/>
                            <Grid ColumnDefinitions="*,*,Auto" ColumnSpacing="5">
                                <TextBox Name="TxtX" Grid.Column="0" Watermark="X" CornerRadius="6" 
                                         Background="White" BorderBrush="#CCC" Padding="5"
                                         Foreground="#222" FontSize="13" FontWeight="SemiBold"/>
                                <TextBox Name="TxtY" Grid.Column="1" Watermark="Y" CornerRadius="6" 
                                         Background="White" BorderBrush="#CCC" Padding="5"
                                         Foreground="#222" FontSize="13" FontWeight="SemiBold"/>
                                <Button Name="BtnUstaw" Grid.Column="2" Content="PrzesuÅ„" 
                                        Background="#6C757D" Foreground="White" CornerRadius="6" 
                                        Padding="8,5" FontWeight="SemiBold" FontSize="11"/>
                            </Grid>
                            <TextBlock Text="â„¹ï¸ Dwuklik = Dodaj | Przytrzymaj = PrzesuÅ„" 
                                       FontSize="9" Foreground="#007ACC" Margin="0,5,0,0" FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <Button Name="BtnOtworzPolaczenie" Content="ðŸ“¡ PoÅ‚Ä…cz IoT" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                            Background="#007ACC" Foreground="White" Padding="12" FontSize="15" 
                            FontWeight="Bold" CornerRadius="8" Height="45"/>
                    
                    <Button Name="BtnRozlaczIoT" Content="ðŸ”Œ RozÅ‚Ä…cz IoT" 
                            HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" 
                            Background="#DC3545" Foreground="White" Padding="10" FontSize="14" 
                            FontWeight="SemiBold" CornerRadius="8" Height="40" IsVisible="False"/>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                        <Button Name="BtnSymulacja" Grid.Column="0" Content="â–¶ START" 
                                Background="#28a745" Foreground="White" HorizontalContentAlignment="Center" 
                                CornerRadius="8" Padding="10" FontWeight="Bold" FontSize="14"/>
                        <Button Name="BtnStop" Grid.Column="1" Content="â¹ STOP" 
                                Background="#dc3545" Foreground="White" HorizontalContentAlignment="Center" 
                                CornerRadius="8" Padding="10" FontWeight="Bold" FontSize="14"/>
                    </Grid>

                    <TextBlock Text="ðŸ“‹ Dziennik zdarzeÅ„:" FontSize="14" FontWeight="Bold" Margin="0,3,0,0" Foreground="#333"/>
                    <Border BorderBrush="#007ACC" BorderThickness="2" CornerRadius="12" Background="White" Height="110" 
                            BoxShadow="0 2 8 0 #DDD" Padding="5">
                        <ListBox Name="ListaHistorii" Background="Transparent" BorderThickness="0">
                            <ListBox.Styles>
                                <Style Selector="ListBoxItem">
                                    <Setter Property="FontSize" Value="11"/>
                                    <Setter Property="Foreground" Value="#222"/>
                                    <Setter Property="Padding" Value="5,3"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                                <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
                                    <Setter Property="Background" Value="#F0F8FF"/>
                                </Style>
                                <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                                    <Setter Property="Background" Value="#007ACC"/>
                                </Style>
                                <Style Selector="ListBoxItem:selected">
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </ListBox.Styles>
                        </ListBox>
                    </Border>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="15" Background="#1E1E1E" CornerRadius="15" BoxShadow="0 4 15 0 #000" ClipToBounds="True">
                <Canvas Name="MapaCanvas" Background="Transparent" Cursor="Cross">
                    <TextBlock Text="MAPA OBIEKTU (RZUT Z GÃ“RY)" Foreground="#888" Canvas.Left="20" Canvas.Top="20" FontWeight="Bold" FontSize="16"/>
                    
                    <Polygon Points="50,50 550,50 550,350 350,350 350,550 50,550"
                             Stroke="#007ACC" StrokeThickness="4" Fill="#252525"/>
                    
                    <TextBlock Text="SERWEROWNIA" Canvas.Left="70" Canvas.Top="80" Foreground="#555" FontSize="12" FontWeight="Bold"/>
                    <Rectangle Canvas.Left="60" Canvas.Top="60" Width="120" Height="80" Stroke="#444" StrokeDashArray="2,2"/>

                    <Ellipse Name="CzujnikGlowny" Width="20" Height="20" Fill="Orange" Stroke="White" StrokeThickness="3"
                             Canvas.Left="250" Canvas.Top="200"/>
                    <TextBlock Name="EtykietaGlowna" Text="S1" Foreground="White"  Canvas.Left="255" Canvas.Top="225"/>
                </Canvas>
            </Border>
        </Grid>
    </Grid>
</Window>